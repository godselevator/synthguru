@{
    ViewBag.Title = "Test page";
    Layout = "~/Views/Shared/_LoggedInLayout.cshtml";
}
@using System.Web.Optimization
@using X.PagedList
@using X.PagedList.Mvc

<!-- import the included stylesheet for some (very basic) default styling -->
<link href="/Content/PagedList.css" rel="stylesheet" type="text/css" />

<div class="row">
    <div class="col-md-12">
        <!-- Upper panel-->
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h4 class="panel-title sysuserfg"><strong>Test page</strong></h4>
            </div>
            <div class="panel-body">
                <div class="aoswell">
                    <div class="form-group">
                        This page is a general test page
                    </div>
                </div>
            </div>
        </div>
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h4 class="panel-title sysuserfg"><strong>Pagination demo</strong></h4>
            </div>
            <div class="panel-body">
                <div class="aoswell">
                    <div class="form-group">
                        This page is a general test page
                    </div>
                    <div class="form-group">
                        <!-- loop through each of your products and display it however you want. we're just printing the name here -->
                        <h2>List of Accounts</h2>
                        <ul>
                            @foreach (var account in ViewBag.OnePageOfAccounts)
                            {
                                <li>@account.Name</li>
                            }
                        </ul>

                        <!-- output a paging control that lets the user navigation to the previous page, next page, etc -->
                        @Html.PagedListPager((IPagedList)ViewBag.OnePageOfAccountIds, page => Url.Action("Test", new { page }), new PagedListRenderOptions { DisplayPageCountAndCurrentLocation = true })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("SpinnerWaitModal")
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
