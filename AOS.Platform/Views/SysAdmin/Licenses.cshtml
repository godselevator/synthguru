                            <div class="input-group">
                                <span class="input-group-addon input-sm" id="igAccountSelector">Account</span>
                                @Html.DropDownListFor(m => m.SelectedAccountId, new SelectList(Model.AccountList, "AccountId", "AccountName"), new { @class = "form-control", id = "accountSelection", aria_describedby = "igAccountSelector", @onchange = "ChangeAccount(this.value)" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon input-sm" id="igAppSelector">App</span>
                                @Html.DropDownListFor(m => m.SelectedAppId, new SelectList(Model.AppList, "AppId", "AppName"), new { @class = "form-control", id = "AppSelection", aria_describedby = "igAppSelector", @onchange = "ChangeApp(this.value)" })
                            </div>
                        </div>
