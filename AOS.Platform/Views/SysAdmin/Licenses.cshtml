                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon input-sm" id="igMaxSeats">Max. seats</span>
                                @Html.EditorFor(m => m.MaxSeats, new { htmlAttributes = new { @class = "form-control input-sm", @placeholder = "Max. seats", @aria_describedby = "igMaxSeats", id = "maxSeats", name = "maxSeats" } })
