@model AOS.Platform.Models.RegisterViewModel
@{
    ViewBag.Title = "Register and buy app";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h4 class="panel-title"><strong>Sign up for a new account</strong></h4>
            </div>
            <div class="panel-body">
                <div class="aoswell">
                    <div class="row">
                        <div class="col-md-12">
                            @using (Html.BeginForm("RegisterAndBuy", "Account", FormMethod.Post, new { @class = "form center-block", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(m => m.AppID, new { id = "hiddenAppId" })
                                @Html.HiddenFor(m => m.IsTrial, new { id = "hiddenIsTrial" })
                                @Html.ValidationSummary("", new { @class = "text-danger" })
                                <div class="form-group">
                                    <p>Before you can purchase the <strong>@Model.AppName</strong> app, you must sign up for an account</p>
                                </div>
                                <div class="form-group">
                                    @Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { @class = "form-control input-lg", @placeholder = "Firstname" } })
                                    <div class="help-block with-errors"></div>
                                </div>
                                <div class="form-group">
                                    @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "form-control input-lg", @placeholder = "Lastname" } })
                                    <div class="help-block with-errors"></div>
                                </div>
                                <div class="form-group">
                                    @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control input-lg", @placeholder = "E-mail" } })
                                    <div class="help-block with-errors"></div>
                                </div>
                                <div class="form-group">
                                    @Html.EditorFor(m => m.Phone, new { htmlAttributes = new { @class = "form-control input-lg", @placeholder = "Phone (optional)" } })
                                    <div class="help-block with-errors"></div>
                                </div>
                                <div class="form-group">
                                    @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control input-lg", @placeholder = "Password" } })
                                </div>
                                <div class="form-group">
                                    @Html.EditorFor(m => m.ConfirmPassword, new { htmlAttributes = new { @class = "form-control input-lg", @placeholder = "Confirm password" } })
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-info btn-lg btn-block" type="submit" id="submit" value="Register">
                                        <span class="glyphicon glyphicon-pencil"></span>&nbsp;Sign up
                                    </button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
