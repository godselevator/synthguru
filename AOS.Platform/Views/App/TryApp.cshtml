@model AOS.Platform.Models.BuyTryAppViewModel
@{
    ViewBag.Title = "AppTry";
    Layout = "~/Views/Shared/_LoggedInLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <!-- Apps panel-->
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h4 class="panel-title"><strong>Try @Model.AppName</strong></h4>
            </div>
            <div class="panel-body">
                <div class="aoswell">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                You are about to try out the @Model.AppName app...<br /><br />
                                When you press the green button, you will start a @Model.TrialDays days trial period. During that period, you will have the possibility to try out the full functionality of the app for free.
                                The Adwiza Online Services Team will contact you within the next days to answer any questions you may have.
                            </div>
                            <div class="form-group">
                                Please confirm your purchase below
                            </div>
                            @{
                                var routeValues = new RouteValueDictionary();
                                routeValues.Add("Id", Model.AppID);
                                routeValues.Add("IsTrial", true);
                                routeValues.Add("UpgradeFromTrial", false);
                            }
                            <button class="btn btn-success" type="button" onclick="location.href='@Url.Action("ConfirmPurchase", "App", routeValues)'">
                                <span class="fa fa-cart-plus"></span> Start trial period
                            </button>
                            <button class="btn btn-danger" type="button" onclick="location.href='@Url.Action("UserHome", "User")'">
                                <span class="fa fa-minus-circle"></span> I've changed my mind
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>