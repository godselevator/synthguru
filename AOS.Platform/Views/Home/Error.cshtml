@model AOS.BusinessLayer.AOSResponse
@{
    ViewBag.Title = "Error";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="content">
        <div class="row">
            <div class="col-md-12 alert alert-danger">
                <h1 class="text-danger">An error occurred</h1>
                <hr />
                @{
                    if (String.IsNullOrEmpty(Model.ErrorMsg))
                    {
                        <h2 class="text-danger">An error occurred while processing your request.</h2>
                    }
                    else
                    {
                        <h2 class="text-danger">@Model.ErrorMsg</h2>
                        if (!String.IsNullOrEmpty(@Model.RedirectAction))
                        {
                            <br />
                            var redirect = @Url.Action(@Model.RedirectAction, @Model.RedirectController);
                            <a href=@redirect>Continue...</a>
                        }
                    }
                }
            </div>
        </div>
    </div>
</div>