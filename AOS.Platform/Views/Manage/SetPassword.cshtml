@model AOS.Platform.Models.SetPasswordViewModel
@{
    ViewBag.Title = "Create Password";
}

<div class="container">
    <div class="content">
        <div class="row">
            <div class="col-md-8">
                @using (Html.BeginForm("SetPassword", "Manage", FormMethod.Post, new { @class = "form center-block", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    <h4>Create Local Login</h4>
                    <hr />
                    <p class="text-info">
                        You do not have a local username/password for this site. Add a local
                        account so you can log in without an external login.
                    </p>
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.EditorFor(m => m.NewPassword, new { htmlAttributes = new { @class = "form-control input-lg", @placeholder = "New password" } })
                        @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
                        @*@Html.LabelFor(m => m.NewPassword, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                        </div>*@
                    </div>
                    <div class="form-group">
                        @Html.EditorFor(m => m.ConfirmPassword, new { htmlAttributes = new { @class = "form-control input-lg", @placeholder = "Confirm new password" } })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                        @*@Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>*@
                    </div>
                    <div class="form-group">
                        <button class="btn aos-btn-warning btn-lg btn-block" type="submit" id="submit" value="Set password">
                            <span class="glyphicon glyphicon-save"></span>&nbsp;Set password
                        </button>
                        @*<div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Set password" class="btn btn-default" />
                        </div>*@
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
