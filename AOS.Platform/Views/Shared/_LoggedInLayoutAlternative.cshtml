<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Adwiza Online Services</title>

    @Styles.Render("~/Content/css")
    @*@Styles.Render("~/Content/OriginalHoverEffects")*@
    @Scripts.Render("~/bundles/modernizr")

    <link rel="shortcut icon" href="../favicon.ico">
    <link href='https://fonts.googleapis.com/css?family=Raleway:400,800,500,600' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" type="text/css" href="~/Content/normalize.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/set2.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap-switch.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/aos-start.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/ladda-themeless.min.css" />
    <link rel="stylesheet" href="~/Content/bootstrap-dialog.css" />
    <link rel="stylesheet" href="~/Content/bootstrap-multiselect.css" />

    <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.js"></script>

    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="~/Scripts/typeahead.bundle.min.js"></script>
    <script src="~/Scripts/bloodhound.js"></script>
    <script src="~/Scripts/bootstrap-typeahead.min.js"></script>
    @*<script src="~/Scripts/aostypeahead.js"></script>*@
    <script src="~/Scripts/bootstrap-switch.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.0/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
    <script src="~/Scripts/spin.min.js"></script>
    <script src="~/Scripts/ladda.min.js"></script>
    <script src="~/Scripts/jquery.contenthover.min.js"></script>
    <script src="~/Scripts/bootstrap-dialog.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/json2/20140204/json2.min.js"></script>
    <script src="https://twitter.github.io/hogan.js/"></script>
    <script src="~/Scripts/bootstrap-multiselect.js"></script>
    <script src="~/Scripts/iframeResizer.min.js"></script>

    <!-- Latest compiled and minified JavaScript -->
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @{
                    var adwizaLogoController = (Request.IsAuthenticated) ? "User" : "Home";
                    var adwizaLogoAction = (Request.IsAuthenticated) ? "UserHome" : "Index";
                }

                <div class="headerlogo">
                    <a href="@Url.Action(@adwizaLogoAction, @adwizaLogoController)">
                        <img alt="logo" style="vertical-align: middle; padding-top:5px; max-width:100%; height:auto" src="~/Content/Images/Adwiza_logo.png" title="AOS version: @typeof(AOS.Platform.MvcApplication).Assembly.GetName().Version" />
                    </a>
                </div>
            </div>
            <div class="headertext">
                <h3>Online Services - Apps for</h3>
            </div>
            <div class="headerlogo">
                <a href="http://www.superoffice.com" target="_blank">
                    <img alt="sologo" style="vertical-align: middle; padding-top:5px; max-width:100%; height:auto" src="~/Content/Images/SuperOffice Logo.jpg" />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="navbar topseperator">
        <div class="container" style="vertical-align:middle; padding-top:7px">
            <div class="btn-group" role="group" aria-label="...">
                <button class="btn btn-primary" onclick="location.href='@Url.Action("UserHome", "User")'">
                    <span class="fa fa-home"></span>&nbsp;My Home Page
                </button>
                <button type="button" class="btn btn-primary" id="btnpersonalsettings" onclick="location.href='@Url.Action("PersonalSettings", "Account")'">
                    <span class="fa fa-bars"></span>&nbsp;Personal settings
                </button>
                <button type="button" class="btn btn-primary" id="btnaccountsettings" onclick="location.href = '@Url.Action("AccountSettings", "Account")'">
                    <span class="fa fa-user"></span><span class="fa fa-user"></span>&nbsp;Account settings
                </button>
                @*<button type="button" class="btn btn-primary" id="btnreferrals" onclick="alert('Not implemented yet');">
                        <span class="fa fa-users"></span>&nbsp;Referrals
                    </button>*@
                <button type="button" class="btn btn-primary" id="btnPreparations" onclick="location.href='@Url.Action("Preparations", "User")'">
                    <span class="fa fa-users"></span>&nbsp;Preparations
                </button>
            </div>
            <div class="btn-group" role="group" aria-label="..." style="float: right" id="btnGroupTop">
                <button class="btn aos-btn-warning" onclick="location.href='@Url.Action("AdministratorHome", "SysAdmin")'">
                    <span class="fa fa-cogs"></span>&nbsp;System User Dashboard
                </button>
                <button class="btn btn-danger" data-toggle="modal" onclick="location.href='@Url.Action("LogOff2", "Account")'">
                    <span class="glyphicon glyphicon-log-out"></span>&nbsp;Logoff
                </button>
            </div>
            <button class="btn btn-danger" data-toggle="modal" id="btnLogoff" style="float:right" onclick="location.href='@Url.Action("LogOff2", "Account")'">
                <span class="glyphicon glyphicon-log-out"></span>&nbsp;Log off
            </button>
        </div>
    </div>
    <div class="container">
        <div class="content">
            <div class="row">
                <div class="col-md-12" id="cockpitContainer">
                    @Html.Action("ShowCockpitAlternative", "Account")
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    @*@RenderBody()*@

    <hr />
    <footer>
        <p class="copyright">Amesto Solutions A/S | Vandtårnsvej 62A | DK-2860 Søborg | Tel. +45 70 22 85 50 | sales@adwiza.com | CVR: 25380010 | © 2016 by Amesto Solutions A/S - All rights reserved (AOS version: @typeof(AOS.Platform.MvcApplication).Assembly.GetName().Version)</p>
    </footer>

    @*@Scripts.Render("~/bundles/jquery")*@
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/holder")


    @RenderSection("scripts", required: false)

    <script>
        $(document).ready(function () {
            $("[id^=appPic]").contenthover({
                overlay_background: '#000',
                overlay_opacity: 0.8
            });

        });
    </script>
</body>
</html>
